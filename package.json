{
  "name": "stadia-controller-flasher",
  "version": "0.1.0",
  "description": "Google Stadia Controller flasher utility",
  "main": "index.js",
  "author": "Luigi Mannoni <hello@luigimannoni.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite serve --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve:reference": "ssl-serve --ssl ./reference/stadia.google.com/controller",
    "serve:custom": "ssl-serve --ssl ./reference/stadia.google.com/custom",
    "pkg": "rm -rf dist && mkdir -p dist && pkg --compress GZip ."
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react-swc": "^3.0.1",
    "eslint": "^8.32.0",
    "eslint-config-google": "^0.14.0",
    "finalhandler": "^1.2.0",
    "pkg": "^5.8.0",
    "serve-static": "^1.15.0",
    "ssl-serve": "^6.5.8",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "engines": {
    "npm": ">=8.15.0",
    "node": ">=v16.17.0"
  },
  "bin": "src/bin.js",
  "pkg": {
    "assets": [
      "src/assets/**.svg",
      "src/data/*.bin",
      "src/app.css",
      "src/index.html"
    ],
    "scripts": [
      "src/controller/*.js",
      "src/app.js"
    ],
    "targets": [
      "node16-win-x64",
      "node16-linux-x64",
      "node16-macos"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
